<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_40"
    android:id="@+id/navItemLyt">

    <ImageView
        android:id="@+id/navItemIc"
        android:layout_width="@dimen/size_20"
        android:layout_height="@dimen/size_20"
        tools:src="@drawable/ic_eye"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.gym.sensiyar.customControls.CustomTextViewMedium
        android:id="@+id/navItemTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/navItemIc"
        app:layout_constraintTop_toTopOf="parent"
        android:text="نملایش اطلاعات کاربری"
        android:textSize="@dimen/font_size_16"
        android:textColor="@color/colorBlack"
        android:layout_marginRight="@dimen/size_18"/>

    <ImageView
        android:layout_width="@dimen/size_20"
        android:layout_height="@dimen/size_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_back_black"
        android:rotation="180"/>

</androidx.constraintlayout.widget.ConstraintLayout>